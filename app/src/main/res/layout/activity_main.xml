<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121216"
    android:padding="16dp">

    <!-- RDS / Station name (marquee) -->
    <TextView
        android:id="@+id/tvRds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Station: --"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Small description line under RDS -->
    <TextView
        android:id="@+id/tvStationDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="--"
        android:textColor="#B7B7B7"
        android:textSize="12sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        app:layout_constraintTop_toBottomOf="@id/tvRds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Large frequency -->
    <TextView
        android:id="@+id/tvFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.5"
        android:textColor="#00B4FF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvStationDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Knob container -->
    <FrameLayout
        android:id="@+id/knobFrame"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFrequency">

        <ImageView
            android:id="@+id/imgKnob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Knob"
            android:scaleType="centerCrop"
            android:src="@drawable/knob_background" />

        <!-- small indicator dot placed near rim (optional) -->
        <View
            android:id="@+id/knobIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/indicator_dot"
            android:translationY="12dp"
            android:visibility="visible" />

        <!-- Play/Pause button in center -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/play_pause_button"
            android:contentDescription="Play/Pause"
            android:src="@drawable/ic_play"
            android:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </FrameLayout>

    <!-- Prev / Next icons -->
    <LinearLayout
        android:id="@+id/btnPrevNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/knobFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_prev"
            android:contentDescription="Previous"/>

        <ImageButton
            android:id="@+id/btnScan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_scan"
            android:layout_marginStart="8dp"
            android:contentDescription="Scan"/>

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_off"
            android:contentDescription="Favorite"/>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next"
            android:layout_marginStart="8dp"
            android:contentDescription="Next"/>
    </LinearLayout>

    <!-- Controls row -->

    <LinearLayout
        android:id="@+id/controlsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnPrevNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ToggleButton
            android:id="@+id/toggleSpeaker"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:textOff="Speaker"
            android:textOn="Speaker" />

        <ImageButton
            android:id="@+id/btnVolDown"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_vol_down"
            android:contentDescription="Vol -"/>

        <TextView
            android:id="@+id/tvVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Vol 50%"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/btnVolUp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_vol_up"
            android:contentDescription="Vol +"/>

        <ToggleButton
            android:id="@+id/toggleMute"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:textOn="Muted"
            android:textOff="Mute"/>

    </LinearLayout>

    <!-- Favorites Recycler at bottom -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavorites"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
